{
  "manifest_version": 2,
  "name": "Query-String",
  "description": "Append Query Parameters in URL",
  "version":"1.0.0",
  "content_scripts" : [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["popup.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "128": "extension_icon.png" },
  "browser_action": {
    "default_icon" : "extension_icon.png",
    "default_popup":"popup.html"
  },
  "permissions": ["storage", "activeTab"]
}
